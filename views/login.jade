extends layout.jade
block body
  main
    h1 Log in
  
    form.pure-form.pure-form-stacked(method='post')
      fieldset
        legend Log in
        
        label(for='username') Username
        input.pure-input-1(name='username' id='username' placeholder='Username')
        
        label(for='password') Password
        input.pure-input-1(name='password' id='password' placeholder='Password')
        
        button.pure-button.pure-button-primary(type='submit') Log in
        
  
